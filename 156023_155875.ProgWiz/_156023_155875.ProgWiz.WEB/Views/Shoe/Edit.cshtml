@using _156023_155875.ProgWiz.INTERFACES
@using _156023_155875.ProgWiz.CORE
@model IClimbingShoe

@{
    ViewData["Title"] = "Edycja Buta";
    var producers = ViewBag.Producers as IEnumerable<IProducer>;
}

<h1>Edytuj Buta</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label">Producent</label>
                <select name="producerId" class="form-control">
                    @foreach (var p in producers)
                    {
                        <!option value="@p.Id" @(p.Id == Model.ProducerId ? "selected" : "")>@p.Name</!option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Nazwa modelu</label>
                <input name="name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="form-group">
                <label class="control-label">Rozmiar</label>
                <input name="size" type="number" step="0.5" class="form-control" value="@Model.Size" required />
            </div>

            <div class="form-group">
                <label class="control-label">Rok produkcji</label>
                <input name="year" type="number" class="form-control" value="@Model.ProductionYear" />
            </div>

            <div class="form-group">
                <label class="control-label">Zapięcie</label>
                <select name="closure" class="form-control">
                    <!option value="0" @(Model.Closure == ClosureType.LaceUp ? "selected" : "")>Sznurowane (LaceUp)</!option>
                    <!option value="1" @(Model.Closure == ClosureType.Velcro ? "selected" : "")>Rzep (Velcro)</!option>
                    <!option value="2" @(Model.Closure == ClosureType.Slipper ? "selected" : "")>Wsuwane (Slipper)</!option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Zapisz Zmiany" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>